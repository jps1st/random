  <persistence-unit name="l2appPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.jps.l2app.entities.Administrator</class>
    <class>com.jps.l2app.entities.RawSMS</class>
    <class>com.jps.l2app.entities.Submission</class>
    <class>com.jps.l2app.entities.QueuedResponse</class>
    <class>com.jps.l2app.entities.EmployeeLimit</class>
    <class>com.jps.l2app.entities.GlobalLimit</class>
